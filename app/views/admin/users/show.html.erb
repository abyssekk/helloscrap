<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="float-left mb-5">プロフィール</h1>
      <table class="table">
        <tr>
          <th scope="row">ニックネーム</th>
          <td><%= @user.nickname %></td>
        </tr>
        <tr>
          <th scope="row">メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th scope="row">権限</th>
          <td><%= @user.role %></td>
        </tr>
      </table>
      <%= link_to '編集', edit_admin_user_path(@user), class: 'btn btn-dark float-right' %>
    </div>
  </div>
</div>
