<tr>
    <td style="width: 5%">
        <%= user.id %>
    </td>
    <td style="width: 10%">
        <%= user.role %>
    </td>
    <td style="width: 20%">
        <%= user.nickname %>
    </td>
    <td style="width: 30%">
        <%= user.email %>
    </td>
    <td style="width: 15%">
        <%= l user.created_at, format: :long %>
    </td>
    <td style="width: 20%">
        <%= link_to t('defaults.show'), admin_user_path(user), class: 'btn btn-info' %>
        <%= link_to t('defaults.edit'), edit_admin_user_path(user), class: 'btn btn-success' %>
        <%= link_to t('defaults.delete'), admin_user_path(user), method: :delete, data: { confirm: t('defaults.delete_check') }, class: 'btn btn-danger' %>
    </td>
</tr>