<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
      <%= render 'search', q: @q, url: boards_path %>
      <p></p>
    </div>
  </div>
  <!-- 一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <table class="table table-striped">
          <thead class="thead-dark">
            <tr>
              <th style="width: 70%">題名</th>
              <th style="width: 20%">更新日</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: "board", collection: @boards %>
          </tbody>
        </table>
        <%= paginate @boards, theme: 'twitter-bootstrap-4' %>
      </div>
    </div>
  </div>
</div>
