<%= form_with model: @board, local: true do |f| %>
    <div class="form-group">
      <%= f.label :url %><br>
      <div class="input-group-append">
        <%= f.text_field :url, class: 'form-control', style: "width: 90%; display: inline-block;" %>
        <%= button_tag(type: 'submit', name: 'url_extract', class: 'btn btn-dark', style: 'display: inline-block;') do %>
          <i class="fas fa-redo-alt"></i>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="left-and-right">
      <div class="form-group left-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control', rows: 10, 'data-provider': :summernote %>
      </div>
      <div class="form-group right-group">
        <%= f.label :notice %>
        <%= f.text_area :notice, class: 'form-control', rows: 10, 'data-provider': :summernote %>
      </div>
    </div>
    <% if logged_in? %>
      <%= f.submit t('defaults.register'), name: 'register', class: 'btn btn-dark' %>
      <%= f.submit t('defaults.temp_register'), name: 'temp_register', class: 'btn btn-dark' %>
    <% end %>
<% end %>