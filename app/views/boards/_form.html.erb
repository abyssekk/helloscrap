<%= form_with model: @board, local: true do |f| %>
    <div class="form-group">
      <%= f.label :url %>
      <%= f.text_field :url, class: 'form-control' %>
    </div>
    <%= f.submit t('defaults.register'), class: 'btn btn-primary', name: 'url_extract' %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control', rows: 10 %>
    </div>
    <%= f.submit t('defaults.register'), class: 'btn btn-primary', name: 'register' %>
<% end %>